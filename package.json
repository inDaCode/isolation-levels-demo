{
  "name": "isolation-levels-demo",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "pnpm build:shared && pnpm dev:run",
    "dev:run": "pnpm --filter frontend --filter backend --parallel dev",
    "dev:backend": "pnpm build:shared && pnpm --filter backend dev",
    "dev:frontend": "pnpm build:shared && pnpm --filter frontend dev",
    "build": "pnpm build:shared && pnpm --filter frontend --filter backend --parallel build",
    "build:shared": "pnpm --filter @isolation-demo/shared build",
    "test": "pnpm build:shared && pnpm -r test",
    "test:cov": "pnpm build:shared && pnpm -r test:cov",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "pnpm build:shared"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
